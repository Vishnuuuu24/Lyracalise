{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Lyracalise",
			"type": "shell",
			"command": "xcodebuild",
			"args": [
				"-project",
				"Lyracalise.xcodeproj",
				"-scheme",
				"Lyracalise",
				"-destination",
				"platform=iOS Simulator,name=iPhone 15",
				"build"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}